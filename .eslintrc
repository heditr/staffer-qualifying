{
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "outerIIFEBody": 1,
        "FunctionDeclaration": {
          "parameters": 1,
          "body": 1
        },
        "FunctionExpression": {
          "parameters": 1,
          "body": 1
        }
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 4,
        "ignoreUrls": true
      }
    ],
    "no-param-reassign": [2, { "props": false }],
    "class-methods-use-this": [0],
    "camelcase": [0],
    "eol-last": ["error", "always"],
    "no-new": [0],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "react/prop-types": [0],
    "react/no-deprecated": [0]
  },
  "parser": "babel-eslint",
  "globals": {
    "document": false,
    "window": false
  }
}
